            <DataTemplate x:Key="StudentTemplate">
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="150 0" VerticalAlignment="Bottom">

                    <TextBlock Width="400" FontSize="30" VerticalAlignment="Center" Style="{StaticResource BlueTextStyle}" Text="{Binding DisplayName}"></TextBlock>
                    <Button CommandParameter="{Binding .}" Command="{Binding Path=DataContext.CompleteEnter, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}" Foreground="WhiteSmoke" Grid.Row="0" Width="100" HorizontalAlignment="Right" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Enter" Foreground="#0066B2" Style="{StaticResource SmallTextStyle}" Margin="0 0"></TextBlock>
                            <fa:ImageAwesome Icon="SignIn" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#0066B2" Height="20"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
     
    </UserControl.Resources>
