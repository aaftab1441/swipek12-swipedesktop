                    <fa:ImageAwesome Icon="ArrowLeft" Margin="0 0 10 0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#0066B2" Height="20"/>
                    <TextBlock Text="Return to Home Screen" Foreground="#0066B2" Style="{StaticResource SmallTextStyle}" Margin="0 0"></TextBlock>

                </StackPanel>

            </Button>

        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Border Margin="5 10">
